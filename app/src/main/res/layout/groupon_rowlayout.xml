<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_dealImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_imageview_height"
                android:layout_marginTop="@dimen/row_text_margin_top"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_dealImage"
                android:layout_marginStart="@dimen/row_text_margin_start"
                android:layout_marginTop="@dimen/row_text_margin_top"
                android:textSize="@dimen/row_title_text_height" />
            <TextView
                android:id="@+id/textView_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_title"
                android:layout_marginStart="@dimen/row_text_margin_start"
                android:layout_marginTop="@dimen/row_text_margin_top"
                android:layout_marginBottom="@dimen/row_text_margin_bottom"
                android:textSize="@dimen/row_desc_text_height"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
